#開始
docker run -d --privileged --name hoge centos /sbin/init

#起動
docker start hoge
docker exec -it hoge /bin/bash

#停止
exit
docker stop hoge

#yum dnf
sed -i -e 's/^mirrorlist/#mirrorlist/g' -e 's/^#baseurl=http:\/\/mirror/baseurl=http:\/\/vault/g' /etc/yum.repos.d/CentOS-*repo

#openssl
dnf -y install openssl

#firewalld
yum -y install firewalld
systemctl status firewalld

vi /etc/firewalld/firewalld.conf
FirewallBackend=nftables
FirewallBackend=iptables#変更

systemctl restart firewalld


